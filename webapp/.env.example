# Environment variables for English Text Analyzer Web App

# Flask configuration
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development

# Optional: Default Gemini API key (not recommended for production)
# GEMINI_API_KEY=your-default-api-key

# File upload limits
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes
MAX_TEXT_LENGTH=50000        # 50,000 characters

# Server configuration
HOST=0.0.0.0
PORT=5000
DEBUG=False